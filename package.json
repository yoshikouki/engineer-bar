{
  "name": "engineer-bar",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "bun --bun x concurrently --prefix-colors 'auto' --names 'CLIENT,SERVER' 'bun dev:client' 'bun dev:server'",
    "dev:client": "bun --bun x vite",
    "dev:server": "bun --bun run --hot src/index.tsx",
    "build": "bun run build:client && bun run build:sever",
    "build:client": "NODE_ENV=production vite build --mode client",
    "build:sever": "NODE_ENV=production bun build --outfile index --compile src/index.tsx",
    "start": "bun --bun run src/index.tsx",
    "lint": "bun --bun x @biomejs/biome check .",
    "lint:fix": "bun --bun x @biomejs/biome check --apply ."
  },
  "dependencies": {
    "@hono/react-renderer": "0.1.0",
    "@radix-ui/react-collapsible": "^1.0.3",
    "@radix-ui/react-dropdown-menu": "^2.0.6",
    "@radix-ui/react-slot": "^1.0.2",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "hono": "^4.0.7",
    "lucide-react": "^0.344.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwind-merge": "^2.2.1",
    "tailwindcss-animate": "^1.0.7",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@biomejs/biome": "1.5.3",
    "@flydotio/dockerfile": "latest",
    "@hono/vite-dev-server": "^0.7.0",
    "@types/bun": "^1.0.7",
    "@types/react": "^18.2.58",
    "@types/react-dom": "^18.2.19",
    "autoprefixer": "^10.4.18",
    "concurrently": "^8.2.2",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.2.2",
    "vite": "^5.1.3",
    "vite-tsconfig-paths": "^4.3.1"
  }
}
